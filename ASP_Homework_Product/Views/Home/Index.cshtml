@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .game_img {
        height:400px;
        width:300px;
        object-fit: cover;
    }
    .Row{
        display:flex;
        justify-content:center;
        flex-wrap:wrap;
    }
    .Column{
        margin:5px;
    }
    img{
        width:20px;
        height:20px;
    }


    /* Поисковик(скопирован) */
    .search{
    margin-bottom: auto;
    border: solid black 1px;
    margin-top: auto;
    height: 70px;
    background-color: #fff;
    border-radius: 40px;
    padding: 10px;
    }

    .search_input{
    color: black;
    outline: 0;
    border: 0;
    background: none;
    width: 0;
    margin-top:5px;
    caret-color:transparent;
    line-height: 40px;
    transition: width 0.4s linear;
    }

    .search .search_input{
    padding: 0 10px;
    width: 550px;
    caret-color:blue;
    transition: width 0.4s linear;
    }
    
    .search:hover > .search_icon{
    background: blue;
    color: #fff;
    }

    .search_icon{
    height: 50px;
    width: 50px;
    float: right;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    color:white;
    background-color:black;
    }
    
    a:link{
        text-decoration:none;
    }  

</style>
<div class="text-center">
    <h2>Каталог</h2>
    <form method="post">
        <div class="d-flex justify-content-center h-100 m-4">
            <div class="search">
                    <input class="search_input" type="text" name="searchInfo" placeholder="Введите название игры">
                    <button type="submit" asp-controller="Home" asp-action="SearchIndex" class="search_icon"><img src="~/images/search.png"></button>
            </div>
        </div>
    </form>
    <div class="Row">
        @foreach(var product in Model){
            <div class="Column card bg-secondary p-2 rounded">
                <a class="btn-dark p-2" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">
                    <img src="@product.ImgLink" class="game_img">
                    <p>@product.Name</p>
                </a>
                <p>@product.Cost руб.</p>
                <a asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" class="btn btn-primary" mt-3">Добавить в корзину</a>
            </div>
        }
    </div>
</div>
