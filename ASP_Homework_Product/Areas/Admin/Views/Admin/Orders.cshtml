@model List<Order>
<div class="row">
	@await Html.PartialAsync("Index")
	<div class="col-9 text-center">
		@if(Model.Count == 0)
		{
			<h2>Заказов нет</h2>
		}
		else
		{
			<h2>Список заказов</h2>
			<table width="500" class="table">
				<tr>
					<th>№</th>
					<th>Сумма</th>
					<th>Статус</th>
					<th>Пользователь</th>
					<th>Дата</th>
					<th>Время</th>
				</tr>
				@for (int i = 0; i < Model.Count; i++)
				{
					<tr>
						<td>@(i+1)</td>
						<td>@Model[i].Cart.Cost</td>
						<td>@switch (Model[i].Status)
						{
							case OrderStatuses.Created:
								<p>Создан</p>
								; break;
							case OrderStatuses.Delivering:
								<p>В пути</p>
								; break;
							case OrderStatuses.Delivered:
								<p>Доставлен</p>
								; break;
							case OrderStatuses.Canceled:
								<p>Отменен</p>
								; break;
						}</td>
						<td>@Model[i].Email</td>
						<td>@Model[i].Date</td>
						<td>@Model[i].Time</td>
						<td><a asp-controller="Admin" asp-action="EditOrderStatus" asp-route-id="@i">Изменить статус заказа</a></td>
					</tr>
				}
			</table>
		}
		
		
	</div>
</div>