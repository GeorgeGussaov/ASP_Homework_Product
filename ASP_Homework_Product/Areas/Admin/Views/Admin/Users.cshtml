@model List<LoginUser>
<div class="row">
	@await Html.PartialAsync("Index")
	@if(Model.Count == 0)
	{
		<div class="text-center">
			<h2>Список пользователей пуст.</h2>
			<br>
			<a class="btn btn-primary" asp-controller="Admin" asp-action="AddUserForm">Добавить пользователя.</a>
		</div>
		
	}
	else
	{
		<div class="col-9 text-center">
			<h2>Список пользователей</h2>
			<table width="500" class="table">
			<tr>
				<th>Имя</th>
				<th>Почта</th>
				<th>Роль</th>
			</tr>
				@foreach(var user in Model)
				{
					<tr>
						<td>@user.Name</td>
						<td>@user.Login</td>
						<td>@user.Role.Name</td>
						<td><a asp-controller="Admin" asp-action="UserPage" asp-route-id="@user.Id" class="btn btn-dark">Подробнее</a></td>
					</tr>
				}
		</table>
			<a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="AddUserForm">Добавить пользователя.</a>
		</div>
	}
</div>