
@model OrderViewModel
<div class="row">
	@await Html.PartialAsync("Index")
	<form method="post">
		<div class="text-center">
			<table class="table">
				<tr>
					<th>Дата и время заказа:</th>
					<td>@Model.Date в @Model.Time</td>
				</tr>
				<tr>
					<th>Адрес доставки:</th>
					<td>@Model.Address</td>
				</tr>
				<tr>
					<th>Получатель:</th>
					<td>@Model.Name</td>
				</tr>
				<tr>
					<th>Email:</th>
					<td>@Model.Email</td>
				</tr>
				<tr>
					<th>Сумма заказа:</th>
					<td>@Model.Cart.Cost</td>
				</tr>
				<tr>
					<th>Статус заказа:</th>
					<td>
						@switch (Model.Status)
						{
							case OrderStatuses.Created:
								<p>Создан</p>
								; break;
							case OrderStatuses.Delivering:
								<p>В пути</p>
								; break;
							case OrderStatuses.Delivered:
								<p>Доставлен</p>
								; break;
							case OrderStatuses.Canceled:
								<p>Отменен</p>
								; break;
						}
						<select class="form-select-sm" name="Status">
							<option selected>изменить статус</option>
							<option value="@OrderStatuses.Created">Создан</option>
							<option value="@OrderStatuses.Delivering">В пути</option>
							<option value="@OrderStatuses.Delivered">Доставлен</option>
							<option value="@OrderStatuses.Canceled">Отменен</option>
						</select>
					</td>
				</tr> 
			</table>
		</div>
		<button type="submit" asp-controller="Admin" asp-action="ChangeStatus" asp-route-id="@Model.OrderId">Сохранить</button>
	</form>
	
</div>
