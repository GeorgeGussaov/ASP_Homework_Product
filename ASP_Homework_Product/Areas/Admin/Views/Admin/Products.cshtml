@model List<Product>
<div class="row">
	@await Html.PartialAsync("Index")
	<div class="col-9 text-center">
			
		<h2>Список Продуктов</h2>
		<a href="/Product/Add" class="btn btn-success">Добавить новый продукт</a>
		<br>
		<table width="500" class="table">
			<tr>
				<th>№</th>
				<th>Название</th>
				<th>Цена</th>
			</tr>
			@{int cnt = 0;}
				@foreach(var product in Model)
				{
					<tr>
						<td>@(cnt++)</td>
						<td><a href="/Product/Index/@product.Id" class="btn btn-dark">@product.Name</a></td>
						<td>@product.Cost</td>
						<td><a href="/Product/Edit/@product.Id" class="btn btn-primary">Редактировать</a></td>
						<td>
							<a class="btn btn-danger" asp-area="" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Удалить</a>
							<!-- Кнопка-триггер модального окна -->
							<a type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Launch demo modal</a>

							<!-- Modal -->
							<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
										<button type="button" class="close" data-dismiss="modal" aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
									<div class="modal-body">
										@product.Id внутри модального окна почему-то не видит нужный id. Вернусь к этому заданию позже. Сейчас работает только кнопка которая чуть левее :)
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
										<button type="button" class="btn btn-secondary" data-dismiss="modal">Delete(не работает)</button>
									</div>
								</div>
								</div>
							</div>
						</td>
					</tr>
				}
		</table>
		
	</div>
</div>

